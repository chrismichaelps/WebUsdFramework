{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "apps/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
